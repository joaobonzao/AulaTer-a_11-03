package javaapplication123;
import java.text.DecimalFormat;
import java.util.Scanner;
public class JavaApplication123 {
    public static void main(String[] args) {
        
        //Declarar variáveis
       Scanner ler = new Scanner(System.in);        
       DecimalFormat decimal = new DecimalFormat ("0.00");
       double baseMaior, baseMenor, altura, area;
       //Entrada de dados
        System.out.println("Insira o tamanho da base maior: ");
        baseMaior = ler.nextDouble();
        System.out.println("Insira o tamanho da base menor: ");
        baseMenor = ler.nextDouble();
        System.out.println("Insira o tamanho da altura:");
        altura = ler.nextDouble();
       //Processamento
        area = (baseMaior + baseMenor) * altura/2;
       //Saida de dados 
        System.out.println("A área o trapézio é: " + decimal.format(area));
        

       
    }
    
}
